# Google OAuth credentials
GOOGLE_CREDENTIALS_PATH=./credentials/google-credentials.json
GOOGLE_TOKEN_PATH=./credentials/google-token.json

# Microsoft OAuth credentials (Azure AD App Registration)
# Get from Azure Portal > App registrations > Your app > Overview
MICROSOFT_CLIENT_ID=
MICROSOFT_TENANT_ID=common
MICROSOFT_TOKEN_PATH=./credentials/microsoft-token.json

# Todoist API token (get from Todoist Settings > Integrations > Developer)
TODOIST_API_TOKEN=

# Database path
DATABASE_PATH=./data/sync.db

# Polling interval in minutes
POLL_INTERVAL_MINUTES=5

# Include completed tasks (set to true for initial retroactive import)
INCLUDE_COMPLETED=false

# Logging level (trace, debug, info, warn, error)
LOG_LEVEL=info
